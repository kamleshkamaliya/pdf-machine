generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id String @id @default(cuid())

  // Core
  title   String
  slug    String  @unique
  excerpt String?
  content String

  // SEO
  seoTitle        String?
  metaDescription String?

  // Author
  authorName String?

  // Featured image
  featuredImageUrl String?
  featuredImageAlt String?

  // Publishing
  status      String    @default("DRAFT") // DRAFT | PUBLISHED
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  // Tags (relation - works in all DBs)
  tags PostTag[]
}

model Tag {
  id    String    @id @default(cuid())
  name  String    @unique
  posts PostTag[]
}

model PostTag {
  postId String
  tagId  String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

// Adobe Limit Tracker (500 per month)
model ApiTracker {
  id        String   @id @default(cuid())
  service   String   // e.g. "ADOBE"
  month     Int      // 0 = Jan, 1 = Feb, etc.
  year      Int      // 2025
  count     Int      @default(0) // Kitni files convert hui
  updatedAt DateTime @updatedAt

  // Ek mahine mein ek service ka ek hi record banega
  @@unique([service, month, year])
}